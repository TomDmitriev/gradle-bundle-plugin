buildscript {
    repositories {
        mavenCentral()

        mavenLocal()
    }
    dependencies {
        classpath 'org.dm.gradle:bundle:latest.integration'
    }
}
apply plugin: 'bundle'
apply plugin: 'java'

repositories {
    mavenCentral()
}

dependencies {
    compile 'org.eclipse:osgi:3.9.1-v20130814-1242'
    compile 'org.osgi:org.osgi.compendium:5.0.0'
}

bundle {
    instructions << [
        'Bundle-Activator': 'org.foo.bar.TestActivator'
    ]
}
